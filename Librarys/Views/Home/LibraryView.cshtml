@model IEnumerable<Librarys.Models.LibraryCategory>

@{
    ViewData["Title"] = "LibraryView";
}

<h1>אוצר הספרים</h1>

<p>
    <a asp-action="CreatNewLibrary">צור ספריה חדשה</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                    @Html.ActionLink("צור מדף חדש", "CreateNewShelf", new { id=item.Id }) |
                    
                
            </td>
        </tr>
}
    </tbody>
</table>
