@model Librarys.Models.Shelfs

@{
    ViewData["Title"] = "CreateNewShelf";
}

<h1>CreateNewShelf</h1>

<h4>Shelfs</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddNewShelf", enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input hidden="hidden" asp-for="libId" value="@ViewBag.Id" />
            </div>
            <div class="form-group">
                <label asp-for="Height" class="control-label"></label>
                <input asp-for="Height" class="form-control" />
                <span asp-validation-for="Height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="LibraryView">חזור לרשימת ספריות</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
